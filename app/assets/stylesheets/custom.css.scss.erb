body {
	background: white;
}

.navbar-inner {
	background: white;
	box-shadow: none;
}

#logo {

margin-left: 50%;
display: none;
	
}

#logo a{
	margin-left: -85px
}

#contentlogo {
	padding-left: 140px;
	
	@media only screen and (max-width: 600px) {
  			padding-left: 90px;
  		 }
	
	img {
	
	}
}

#tagline{
	text-align: center;
	margin-bottom:25px;
}

#question {
	width:100%;
	resize:none;
	font-size: 18px;
	line-height: 125%;
	padding: 0px;
	box-shadow: inset 1px 1px 2px #999;
	border-radius: 5px 5px 0px 0px;
	margin:0px;
	
}

.content {
	background: white;
	box-shadow: none;
	width: 400px;
	padding: 0px;
	margin: auto;
	
	@media only screen and (max-width: 600px) {
  		
  		margin-top: 50px;
  		width: 300px;
  	}
}

#ask {
	width:100%;
	font-weight: bold;
	height: 50px;
	font-size: 24px;
}

#location-container {
	width: 100%;
	height: 26px;
	border: 1px solid #CCC;
	box-shadow: inset 1px 1px 2px #999;
}

#location {
	width: 80%;
	margin-left: 0px;
	margin-right: -5px;
	font-size: 18px;
	margin-bottom: 0px;
	float: left;
	border: none;
	background: transparent;
	
	
}

#location span {
	color: #0077C3;

}

.input-prepend .add-on, .input-append .add-on {
	line-height: 13px;
}



.input-append .add-on, .input-prepend .add-on{
		margin-bottom: -1px;
}

#location-icon {
	float:left;
	margin-top: -1px;
}

#close-icon {
	float: right;
	margin-top:-1px;
	background-color: white;
	border-left: none;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	-webkit-transition: border linear 0.2s, box-shadow linear 0.2s;
	-moz-transition: border linear 0.2s, box-shadow linear 0.2s;
	-ms-transition: border linear 0.2s, box-shadow linear 0.2s;
	-o-transition: border linear 0.2s, box-shadow linear 0.2s;
	transition: border linear 0.2s, box-shadow;

	a {
		float:left;
	}
}

.close{
	font-size: 4px;

	}
	.close:hover{
			background-color: white;
			opacity: 1;
	}

#friends {
	margin-top:10px;
	height:150px;
}


.dummyfriend {
	height: 50px;
	width: 50px;
	display:inline-block;
	background-color: #CCC;
	
}

#spinner {
	margin-top: 20px;
}

#facepile {
	min-height: 100px;
	margin-bottom: 25px;
 	
	.profileimg {
		display:inline-block;
		position: relative;
		width: 145px;
		margin-right: 5px;
		margin-bottom: 5px;
		height: 145px;
		overflow:hidden;
		img {
			vertical-align: top;
			width: 145px;
			position: absolute;
		}
	}
	
	.nameoverlay{
		display:inline-block;
		background-color:rgba(0,0,0,0.6);
		left: 0px;
		bottom: 0px;
		position: absolute;
		width: 100%;
		font-size: 14px;
		color: #FFF;
	}
	
	#plusmore {
		font-size: 18px;
		margin-top: 5px;
		margin-left:auto;
		margin-right:auto;
		display: block;
		vertical-align: top;
		width:100%;
		text-align: center;	
		background-color:rgba(0,0,0,0.6);
		color: white;
		padding: 5px 0px;	
	}

}



	
.half {
	width:40%;
	display:inline-block;
	height: 40px;
	margin:auto;
}

footer {
	position: fixed;
	bottom: 0px;
	left:0px;
	width: 100%;
	padding:0px 0px;
}


#footernav{
	height: 50px;
	width: 100%;
	color: white;
	background: -webkit-linear-gradient(top, #555, #222);
	font-size: 0;
	
	display:none;
}

.footerbtn {
	width: 44%;
	height: 40px;
	margin: 0px;
	display: inline-block;
	@media only screen and (min-width: 600px) {
  		width: 47%;
  	}
}

.footerbtn p{
	margin-top: 10px;
}
