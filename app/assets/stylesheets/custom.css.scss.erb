body {
	background-image: url('<%= image_path 'noise_pattern_with_crosslines.png' %>');
	background-repeat: repeat;
}

#logo {

margin-left: 50%;
	
}

#logo a{
	margin-left: -85px
}

#question {
	width:100%;
	resize:none;
	font-size: 18px;
	line-height: 125%;
}

.content {
	-webkit-border-radius: 6px 6px 6px 6px;
	-moz-border-radius: 6px 6px 6px;
	border-radius: 6px 6px 6px 6px;
	-moz-box-shadow: 5px 5px 5px black;
	-webkit-box-shadow: 5px 5px 5px black;
	box-shadow: 0px 0px 30px black;
}

#ask {
	width:100%;
	font-weight: bold;
	height: 50px;
	font-size: 24px;
}

#location {
	margin-top: 10px;
	width: 80%;
	margin-left: -5px;
	margin-right: -5px;
	font-size: 18px;
}

#location span {
	color: #0077C3;

}

.input-prepend .add-on, .input-append .add-on {
	line-height: 13px;
}



.input-append .add-on, .input-prepend .add-on{
		margin-bottom: -1px;
}


#close-icon {
	background-color: white;
	border-left: none;
	
	-webkit-box-shadow: inset 0 1px 1px 
rgba(0, 0, 0, 0.075);
-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
box-shadow: inset 0 1px 1px 
rgba(0, 0, 0, 0.075);
-webkit-transition: border linear 0.2s, box-shadow linear 0.2s;
-moz-transition: border linear 0.2s, box-shadow linear 0.2s;
-ms-transition: border linear 0.2s, box-shadow linear 0.2s;
-o-transition: border linear 0.2s, box-shadow linear 0.2s;
transition: border linear 0.2s, box-shadow;


	a {
		float:left;
	}


}

.close{
	font-size: 4px;
	}
	.close:hover{
			background-color: white;
			opacity: 1;
	}

#friends {
	margin-top:10px;
	height:150px;
}


.dummyfriend {
	height: 50px;
	width: 50px;
	display:inline-block;
	background-color: #CCC;
	
}

#spinner {
	margin-top: 20px;
}

#facepile {
	min-height: 150px;
}

#facepile img {
	margin-right: 5px;
}

#plusmore {
	font-size: 18px;
	margin-top: 10px;
	display: inline-block;
}
	
.half {
	width:40%;
	display:inline-block;
	height: 40px;
	margin:auto;
}

footer {
	position: fixed;
	bottom: 0px;
	left:0px;
	width: 100%;
	padding:0px 0px;
}


#footernav{
	height: 50px;
	width: 100%;
	color: white;
	background: -webkit-linear-gradient(top, #555, #222);

	font-size: 0;
}

.footerbtn {
	width: 44%;
	height: 40px;
	margin: 0px;
	display: inline-block;
}

.footerbtn p{
	margin-top: 10px;
}


/* Mobile Landscape Size to Tablet Portrait (devices and browsers) */
  @media only screen and (min-width: 600px) {
  
  	.content{
  		width:600px;
  		margin: auto;
  		margin-top: 50px;
  	}
  	
  	#location {
	margin-top: 10px;
	width: 89%;
	}
	
	#question {
		width:98%;
	}
	
	.footerbtn {
	width: 47%;
	height: 40px;
	margin: 0px;
	display: inline-block;
	}
  
  }