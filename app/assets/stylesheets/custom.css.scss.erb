body {
	background: url(/assets/bkg.png);
}

.navbar-inner {
	background: white;
	box-shadow: none;
}

.username {
	float: right;
	width: 170px;
}

.username img {
	height: 26px;
	float: left;
}

.nav-pills {
	float: right;
}

.dropdown-toggle {
	color: #666;
}


#logo {

margin-left: 50%;
display: none;
	
}

#logo a{
	margin-left: -85px
}

#contentlogo {

	img {
		width: 100%;
		margin-bottom: 25px;
	}
}

#tagline{
	text-align: center;
	margin-bottom:25px;
}

#question {
	width:100%;
	height: 75px;
	resize:none;
	font-size: 14px;
	line-height: 125%;
	padding: 10px;
	box-shadow: inset 1px 1px 5px #999;
	border-radius: 5px 5px 0px 0px;
	border: 1px solid #999;
	margin:0px;
	box-sizing: border-box;
	
}

.content {
	background: transparent;
	box-shadow: none;
	width: 350px;
	padding: 0px;
	margin: auto;
	
	@media only screen and (max-width: 600px) {
  		
  		margin-top: 50px;
  		width: 300px;
  	}
}

#ask {
	width:100%;
	font-weight: bold;
	height: 50px;
	font-size: 24px;
}

#location-container {
	width: 100%;
	height: 28px;
	border: 1px solid #999;
	border-top: none;
	box-sizing: border-box;
	background:-webkit-linear-gradient(#c0c0c0 0%, #f3f3f3 100%);
	padding: 3px;
	border-radius: 0px 0px 3px 3px;
	
	p {
		float: left;
		color: #666;
	}
}

#location {
	width: 60%;
	margin-left: 0px;
	margin-right: -5px;
	font-size: 13px;
	margin-bottom: 0px;
	float: left;
	background: transparent;
	padding: 1px 0px 0px 5px;
	box-shadow: none;	
	border: none;
	
}

#location span {
	color: #0077C3;

}

.input-prepend .add-on, .input-append .add-on {
	line-height: 13px;
}



.input-append .add-on, .input-prepend .add-on{
		margin-bottom: -1px;
}


#location-icon {
	float: right;
	margin-top:-1px;
	background-color: transparent;
	border: none;
	opacity: .3;
	height: 10px;

	a {
		float:left;
	}
	
	:hover {
		opacity: 1;
	}
}

.location{
	font-size: 4px;
		
		img {
			height: 16px;
			width: 16px;
		}
		
		:hover {
			opacity: 1;
		}
	}

#friends {
	margin-top:10px;
	height:150px;
}


.dummyfriend {
	height: 50px;
	width: 50px;
	display:inline-block;
	background-color: #CCC;
	
}

#spinner {
	margin-top: 20px;
}

#facepile {
	min-height: 100px;
	margin-bottom: 25px;
 	
	:nth-child(4n) {
			margin-right: 0 !important;
			float: right;
		}
	
	.profileimg {
		display:inline-block;
		position: relative;
		width: 83px;
		margin-right: 6px;
		margin-bottom: 5px;
		height: 85px;
		overflow:hidden;
		img {
			vertical-align: top;
			width: 95px;
			position: absolute;
		}
		
	}
	
	.nameoverlay{
		display:inline-block;
		background-color:rgba(0,0,0,0.6);
		left: 0px;
		bottom: 0px;
		position: absolute;
		width: 100%;
		font-size: 14px;
		color: #FFF;
	}
	
	#plusmore {
		font-size: 18px;
		margin-top: 5px;
		margin-left:auto;
		margin-right:auto;
		display: block;
		vertical-align: top;
		width:100%;
		text-align: center;	
		background-color:rgba(0,0,0,0.6);
		color: white;
		padding: 5px 0px;	
	}

}



	
.half {
	width:40%;
	display:inline-block;
	height: 40px;
	margin:auto;
}

footer {
	position: fixed;
	bottom: 0px;
	left:0px;
	width: 100%;
	padding:0px 0px;
}


#footernav{
	height: 50px;
	width: 100%;
	color: white;
	background: -webkit-linear-gradient(top, #555, #222);
	font-size: 0;
	
	display:none;
}

.footerbtn {
	width: 44%;
	height: 40px;
	margin: 0px;
	display: inline-block;
	@media only screen and (min-width: 600px) {
  		width: 47%;
  	}
}

.footerbtn p{
	margin-top: 10px;
}
