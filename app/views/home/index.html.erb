<div class="row-fluid">
	<a href="/"><span id="contentlogo"><%= image_tag 'biglogo.png' %></span></a>
</div>

<div class="row-fluid">
	<h3 id="tagline">Don't search, ask your friends.</h3>
	<textarea id="question" rows="4" class="span2" placeholder="Type your question here. Use hashtags to mark #important #keywords."></textarea>
	<input type="hidden" id="tags" value="."/>
</div>

<div class="row-fluid">
    <div id="location-container" class="input-prepend input-append">
		<span id="location-icon" class="add-on"><%= image_tag 'locatesmall.png' %></span>	
		<input class="location" id="location" size="16" type="text" placeholder="Friend's current city." />
		<span id="close-icon" class="add-on"><a class="close" href="#"><%= image_tag 'x.png' %></a></span>
    </div>
</div>

<div class="row-fluid">
	<div id="spinner"></div>
	<div id="facepile"></div>	
</div>

<div class="row-fluid">
	<div class="span12"><button id="ask" class="btn btn-primary">Ask These Friends</button></div>
</div>
